<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FromAddressText">
        <item name="android:background">@drawable/start_address_text_bg</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:text">@string/start_point_address</item>
        <item name="android:padding">@dimen/_18dp</item>
        <item name="android:textColor">@color/from_address_text_color</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="ToAddressText">
        <item name="android:background">@drawable/end_address_text_bg</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:text">@string/where</item>
        <item name="android:padding">@dimen/_18dp</item>
        <item name="android:textColor">@color/to_address_text_color</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="OptionsView">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">@dimen/_60dp</item>
    </style>

    <style name="OptionsImage">
        <item name="android:layout_width">@dimen/_20dp</item>
        <item name="android:layout_height">@dimen/_20dp</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>
    </style>

    <style name="OptionsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_6dp</item>
        <item name="fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="AddressText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_4dp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ReturnView">
        <item name="android:layout_width">@dimen/_40dp</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_46dp</item>
    </style>

    <style name="DataTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textColor">@color/car_type_text_color</item>
        <item name="fontFamily">@font/lato_semibold</item>
    </style>

    <style name="InfoTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="Headers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

</resources>